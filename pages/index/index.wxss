.container{
  height: 100%;
  width: 100%;
}

.banner{
  width:750rpx;
  position: relative;
}

.pic{
  display:block;
  width:750rpx;
  position:absolute; 
  top:0;
  left:0;
}

.button-left {
  height: 100rpx;
  width: 200rpx;
  padding: 20rpx;
  background-color: rgba(0,0,0,0.3);
  position: fixed;
  bottom: 150rpx;
  left: 120rpx;
  font-size: 20rpx;
  box-sizing: border-box;
  background-size: 55rpx auto;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
}

.button-right {
  height: 100rpx;
  width: 200rpx;
  padding: 20rpx;
  background-color: rgba(0,0,0,0.3);
  position: fixed;
  bottom: 150rpx;
  right: 120rpx;
  font-size: 20rpx;
  box-sizing: border-box;
  background-size: 55rpx auto;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
}
